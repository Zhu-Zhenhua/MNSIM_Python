// Simulation
sim_type = latency;
sample_period = 100;
warmup_periods = 2;
max_samples = 100;

injection_rate = 0.000001;

num_vcs = 1;

buf_size = 1;
vc_buf_size = 1;
output_buffer_size = 1;

private_bufs = 1;
private_buf_size = 1;

sim_power = 1;

tech_file = techfile.txt;

channel_width = 32;
